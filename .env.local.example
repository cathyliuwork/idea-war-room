# ============================================================================
# Idea War Room - Environment Configuration (Local Development)
# ============================================================================
# IMPORTANT: Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================================================
# SUPABASE (Database only, NOT auth)
# ============================================================================
# Get these values from: https://supabase.com/dashboard/project/[your-project]/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://[your-project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ[your-anon-key]
SUPABASE_SERVICE_ROLE_KEY=eyJ[your-service-role-key]

# ============================================================================
# AUTHENTICATION MODE
# ============================================================================
# Options: 'mock' (dev/local testing) or 'jwt' (production with parent integration)

AUTH_MODE=mock

# ============================================================================
# DEV MODE CONFIGURATION (only used when AUTH_MODE=mock)
# ============================================================================
# Format: id:email:name;id:email:name
# Example: test-user-1:alice@example.com:Alice Developer;test-user-2:bob@example.com:Bob Tester

MOCK_USERS=test-user-1:alice@example.com:Alice Developer;test-user-2:bob@example.com:Bob Tester
DEFAULT_MOCK_USER=test-user-1

# ============================================================================
# JWT CONFIGURATION (only used when AUTH_MODE=jwt)
# ============================================================================
# Shared secret key for JWT verification (minimum 32 characters)
# MUST match the secret used by parent project to generate JWTs

JWT_SECRET=your-shared-secret-key-minimum-32-characters-long
JWT_ALGORITHM=HS256

# ============================================================================
# PARENT PROJECT URLs (only used when AUTH_MODE=jwt)
# ============================================================================

NEXT_PUBLIC_PARENT_HOME_URL=http://localhost:3000
PARENT_LOGIN_URL=https://parent.example.com/login
NEXT_PUBLIC_PARENT_LOGIN_URL=https://parent.example.com/login


# ============================================================================
# AI BUILDERS API
# ============================================================================
# Get API key from: https://space.ai-builders.com

AI_BUILDERS_API_KEY=your-api-key-here
AI_BUILDERS_API_URL=https://space.ai-builders.com/backend

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
